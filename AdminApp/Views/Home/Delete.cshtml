
@using AdminApp.ViewModels;
@model MOTStatusViewData

<head>
    <link href="~/css/Delete.css" rel="stylesheet" type="text/css"/>
</head>

    @if(@Model.VehicleDeleted == true)
    {
        <div style="margin-top:50px;">
              <h4 id="vehicleDetailsDeletedConfirmation">Vehicle @Model.FormatReg has been removed from DVLA records</h4>
        </div>
      
         <a asp-action="Index" class="btn btn-success" style="margin-left:480px; width:250px;">Return to GOV.UK</a>
    }else{

    <h3 style="text-align:center; background: #ff9999; height:60px; padding-top:10px; width:830px; margin-left:210px;">Are you sure you want to delete vehicle details for @Model.FormatReg ?</h3>

        <form asp-action="Delete">
             
            <div class="container p-3 mt-2 bg-body-secondary">
             <div class="row">
                 <div class="col-2"></div>
     
                 <div class="col-10" >
                     <span>
                        <button type="submit" class="btn btn-danger" style="margin-left:120px; width:250px;">Delete</button>
                        <a asp-action="Index" class="btn btn-success" style="margin-left:50px; width:250px;">Return to GOV.UK</a>
                     </span>                   
                 </div>
             </div>
        </div>

        <div class="container p-3 mt-0 bg-body-secondary">
            <div class="row pt-1">
                <h4>Vehicle Details</h4>
                <div class="col-6">
                    <table>
                        <tr>
                            <td class="attribute">Vehicle make</td>
                            <td>@Model.mOTStatusDetails.Make</td>
                        </tr>
                        <tr>
                            <td class="attribute">Date of first registration</td>
                            <td>@Model.mOTStatusDetails.DateOfRegistration</td>
                        </tr>
                        <tr>
                            <td class="attribute">Cylinder Capacity</td>
                            <td>@Model.mOTStatusDetails.CylinderCapacity</td>
                        </tr>
                         <tr>
                            <td class="attribute">CO2 Emissions</td>
                            <td>@Model.mOTStatusDetails.CO2Emissions</td>
                        </tr>
                         <tr>
                            <td class="attribute">Fuel Type</td>
                            <td>@Model.mOTStatusDetails.FuelType</td>
                        </tr> <tr>
                            <td class="attribute">Euro status</td>
                            <td>@Model.mOTStatusDetails.EuroStatus</td>
                        </tr>
                         <tr>
                            <td class="attribute">Real driving emissions (RDE)</td>
                            <td>@Model.mOTStatusDetails.RealDrivingEmissions</td>
                        </tr>
                         <tr>
                            <td class="attribute">Export marker</td>
                            <td>@Model.mOTStatusDetails.ExportMarker</td>
                        </tr>
                         <tr>
                            <td class="attribute">Vehicle Status</td>
                            <td>@Model.mOTStatusDetails.VehicleStatus</td>
                        </tr>
                    </table>
                </div>
                <div class="col-6">
                    <table>
                         <tr>
                            <td class="attribute">Vehicle Colour</td>
                            <td>@Model.mOTStatusDetails.VehicleColour</td>
                        </tr>
                         <tr>
                            <td class="attribute">Vehicle type approval</td>
                            <td>@Model.mOTStatusDetails.VehicleTypeApproval</td>
                        </tr>
                         <tr>
                            <td class="attribute">Wheel plan</td>
                            <td>@Model.mOTStatusDetails.WheelPlan</td>
                        </tr>
                         <tr>
                            <td class="attribute">Revenue weight</td>
                            <td>@Model.mOTStatusDetails.RevenueWeight</td>
                        </tr>
                         <tr>
                            <td class="attribute">Date of last V5C</td>
                            <td>@Model.mOTStatusDetails.DateOfLastV5C</td>
                        </tr>
                         <tr>
                            <td class="attribute">Tax due date</td>
                            <td>@Model.mOTStatusDetails.TaxDueDate</td>
                        </tr>
                         <tr>
                            <td class="attribute">Date of last MOT</td>
                            <td>@Model.mOTStatusDetails.DateOfLastMOT</td>
                        </tr>
                         <tr>
                            <td class="attribute">MOT due date</td>
                            <td>@Model.mOTStatusDetails.MOTDueDate</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        </form>
}